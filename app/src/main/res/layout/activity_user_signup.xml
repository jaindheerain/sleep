<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroudGrey"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".signup.UserSignup">

    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Sign Up"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_weight="0.1"/>
    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="WHO ARE YOU?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/silver"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_weight="0.06"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:id="@+id/explorer"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/explorer"
                />
                <ImageView
                    android:layout_gravity="right"
                    android:layout_width="20dp"
                    android:id="@+id/checkExp"
                    android:src="@drawable/ic_correct1"
                    android:layout_height="20dp" />
            </FrameLayout>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explorer"
                android:layout_gravity="center"
                android:textColor="@color/yellow"
                 />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"></View>
        <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
            android:id="@+id/corporate"
        android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/reunion"
            />
                <ImageView
                    android:src="@drawable/ic_correct1"
                    android:layout_gravity="right"
                    android:layout_width="20dp"
                    android:visibility="gone"
                    android:id="@+id/checkCorp"
                    android:layout_height="20dp" />
            </FrameLayout>
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corporate"
            android:layout_gravity="center"
            android:textColor="@color/darkcyan"
             />
    </LinearLayout>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Full Name"
        android:inputType="text"
        android:textColor="@color/silver"
        android:textColorHint="@color/silver"
        android:gravity="center"
        android:textAlignment="viewStart"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:drawablePadding="10dip"
        android:paddingLeft="24dip"
        android:background="@drawable/outline_button_curved"
        android:layout_weight="0.07"
        android:id="@+id/username"
        /><EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Mobile"
        android:inputType="number"
        android:textColor="@color/silver"
        android:textColorHint="@color/silver"
        android:gravity="center"
        android:textAlignment="viewStart"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:drawablePadding="10dip"
        android:paddingLeft="24dip"
        android:background="@drawable/outline_button_curved"
        android:layout_weight="0.07"
        android:id="@+id/phone"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Email"
        android:textColor="@color/silver"
        android:textColorHint="@color/silver"
        android:layout_marginTop="16dp"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:drawablePadding="10dip"
        android:paddingLeft="24dip"
        android:paddingRight="24dip"
        android:singleLine="true"
        android:background="@drawable/outline_button_curved"
        android:layout_weight="0.07"
        android:id="@+id/email"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Password"
        android:textColor="@color/silver"
        android:textColorHint="@color/silver"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:drawablePadding="10dip"
        android:paddingLeft="24dip"
        android:background="@drawable/outline_button_curved"
        android:layout_weight="0.07"
        android:id="@+id/password"
        android:paddingRight="24dip"
        android:singleLine="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:drawablePadding="10dip"
        android:paddingLeft="24dip"
        android:hint="Confirm Password"
        android:textColor="@color/silver"
        android:textColorHint="@color/silver"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/outline_button_curved"
        android:layout_weight="0.07"
        android:id="@+id/confirmPass"
        android:paddingRight="24dip"
        android:singleLine="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"></View>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="Signup"
        android:id="@+id/signup"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/gradient"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:id="@+id/login"
        android:layout_gravity="center"
        android:layout_weight="0.1">
        <TextView
            android:textStyle="italic"
            android:textColor="@color/silver"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Already have an account.  "/>
        <TextView
            android:textStyle="italic"
            android:textColor="@color/tomato"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Login Here"/>
    </LinearLayout>

</LinearLayout>